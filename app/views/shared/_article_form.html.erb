
<div class="container-lg">
<%= form_with model: @article do |f| %>
    <div class="field form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title,
    class:"form-control", placeholder:"Title" %>
    </div><br>
    <div class="field form-group">
    <%= f.label :body %><br>
    <%= f.text_area :body,
    class:"form-control", placeholder:"Article Content here.."
     %>
    </div>
    <br>
    <div class="field form-group">
    <%= f.text_field :user_id,id: :article_user_id,
    class:"form-control", value:current_user.id, type: :hidden
     %>
    </div>
    <%=  %>
    <br>
    <div class="actions">
    <%= f.submit class:"btn btn-secondary" %>
    </div>
     
<% end %>
</div>